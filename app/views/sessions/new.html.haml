= provide :title, "SignIn"

.row#login_page
  %h2.text-primary ログイン
  .login_form
    %p Bookstrap ID をお持ちの方
    = form_for(:session, url: sessions_path) do |f|
      = f.label :userid, "ユーザーID"
      = f.text_field :userid
      = f.label :password, "パスワード"
      = f.text_field :password
      = f.submit "ログイン", class:"btn btn-primary"
    %p Bookstrap ID をお持ちでない方
    = link_to "今すぐ登録する", signup_path, class: "btn btn-success"